.chat-main
  .chat-main__group-info
    .left-header
      .group-title
        = @group.name
      .group-member
        - @group.users.each do |user|
          = user.name
        -# - group.group_user.user
        -#   - user each do |name|
            
          
    .right-header 
      .group-edit-btn
        = link_to edit_group_path(@group.id), class:"edit" do
          edit
            
  .chat-main__massage-list
    = render @messages
   

  .chat-main__massage-form
    = form_with model: [@group, @message], html: {class: "input"}, local: true do |f|
      .input__box
        = f.text_field :content, class: 'input__box__text', placeholder: 'type a message'
        = f.label :image, class: 'input__box__image' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'input__box__image--file'
      = f.submit 'Send', class: 'submit-btn'  



