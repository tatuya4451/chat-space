.side-bar
  .side-bar__user-name  
    .top-items
      .top-items__name 
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon( 'fas','edit', class: "icon")
        = link_to edit_user_path(current_user) do
          = icon('fas','cog', class: "icon")  
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__contents 
        = link_to group_messages_path(group), class: "group" do
          .side-bar__contents__name
            = group.name
          .side-bar__contents__message 
            = group.show_last_message
    